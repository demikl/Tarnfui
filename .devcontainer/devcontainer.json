{
    "name": "Python Dev Container",
    "image": "mcr.microsoft.com/devcontainers/python:3.13",
    "postCreateCommand": "pipx install uv && uv sync",
    "postStartCommand": "/bin/sh .devcontainer/setup-local-git.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "charliermarsh.ruff"
            ]
        }
    }
}
